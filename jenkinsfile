pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'wsl-zomato'
        DOCKER_IMAGE = 'omwarkri123/awsconfig-app:latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/omwarkri/wsl-zomato.git', 
                    credentialsId: 'wsl-zomato3'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', DOCKERHUB_CREDENTIALS) {
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh "docker rm -f awsconfig-app || true"
                sh "docker run -d --name awsconfig-app -p 3000:3000 ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
