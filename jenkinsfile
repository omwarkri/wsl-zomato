pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'wsl-zomato' // Jenkins Docker credentials ID
        DOCKER_IMAGE = 'omwarkri123/awsconfig-app:latest'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Logs in to DockerHub using Jenkins stored credentials
                    withDockerRegistry([credentialsId: "${DOCKERHUB_CREDENTIALS}", url: '']) {
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Remove old container if exists and run new container
                    sh """
                        docker rm -f awsconfig-app || true
                        docker run -d --name awsconfig-app -p 3000:3000 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
