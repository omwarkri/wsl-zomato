pipeline {
    agent any

    environment {
        DOCKER_USERNAME = credentials('DOCKER_USERNAME')
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
        IMAGE_NAME = 'omwarkri123/awsconfig-app:latest'
        REGISTRY = 'docker.io'
        GITHUB_USERNAME = 'omwarkri'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "https://github.com/${GITHUB_USERNAME}/wsl-zomato.git",
                    credentialsId: 'wsl-zomato3'
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USERNAME} --password-stdin ${REGISTRY}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${IMAGE_NAME}"
            }
        }

        stage('Deploy Container') {
            steps {
                sh """
                    docker rm -f awsconfig-app || true
                    docker run -d --name awsconfig-app -p 3000:3000 ${IMAGE_NAME}
                """
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
